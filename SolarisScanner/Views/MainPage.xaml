<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SolarisScanner.Views.MainPage"
             NavigationPage.HasNavigationBar="False"
             >

    <VerticalStackLayout VerticalOptions="FillAndExpand" BackgroundColor="Transparent" Margin="0,40,0,0">
        
        <Button
            HeightRequest="60"
            VerticalOptions="Center"
            ImageSource="qrlogo.svg"
            ContentLayout="Left, 10"
            Text="Accéder au Scanner"
            TextColor="{AppThemeBinding Light=Black, Dark=White}"
            FontSize="20"
            FontAttributes="Bold"
            BackgroundColor="Transparent"
            BorderColor="WhiteSmoke"
            BorderWidth="2"
            CornerRadius="0"
            Command="{Binding GoToScanPageCommand}" 
            IsEnabled="{Binding IsNotBusy}" 
        />
            
            
    </VerticalStackLayout>

</ContentPage>
